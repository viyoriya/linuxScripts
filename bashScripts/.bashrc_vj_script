function vj_mkgitrepo {
	curl -u "viyoriya" https://api.github.com/user/repos -d '{ "name": "${1}" }' ; 
}

# === Solus ===
function vj_solgc {
	git clone https://dev.getsol.us/source/${1}.git
	cd ${1}
	ls -hl --group-directories-first
}

# for pywal
wal-tile() {
    wal -n -i "$@"
    feh --bg-tile "$(< "${HOME}/.cache/wal/wal")"
}

